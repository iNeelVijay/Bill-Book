<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragments.PartyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/top_curve_design"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="My Parties"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="10dp"
            />





    </LinearLayout>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/serach_ic"
                android:background="@drawable/search_style"
                android:drawableTint="#000000"
                android:padding="5dp"
                android:hint="Enter party name to search"
                android:textColorHint="#A9A9A9"
                android:drawablePadding="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:id="@+id/search_parties"
                />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/search_parties"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_ic"
            android:scaleType="fitXY"
            app:tint="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/add_ic"
            android:drawableTint="@color/white"
            android:text="Add new party"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A9A9A9"
            android:id="@+id/createParty_party"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_ic"
            android:scaleType="fitXY"
            app:tint="@color/colorPrimaryDark"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="You don't have any party in your list."
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:id="@+id/emptyMsg_party"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_parties"
            android:layout_marginTop="5dp"
            />




    </LinearLayout>






























</RelativeLayout>