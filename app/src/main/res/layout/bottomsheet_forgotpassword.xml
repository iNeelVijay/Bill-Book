<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="35sp"
                android:text="Ecrrede Billing App"
                android:fontFamily="cursive"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/keypad_ic"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:tint="@color/colorPrimaryDark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password recovery pannel"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:id="@+id/registerLink_loginPage"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/mail_ic"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="5dp"
                android:drawablePadding="3dp"
                android:textColorHint="#A9A9A9"
                android:hint="Enter your reistered email here"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:id="@+id/email_forgotPassword"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/buttons"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="Send Verification Link"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/sendLink_forgotPassword"
                />




        </LinearLayout>








    </RelativeLayout>

</androidx.cardview.widget.CardView>