<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical"
          >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="19sp"
              android:textStyle="bold"
              android:text="Item Name"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              android:id="@+id/itemName_onScreen"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:gravity="center"
              android:textColor="#A9A9A9"
              android:textSize="15sp"
              android:textStyle="bold"
              android:text="1 kg"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="3dp"
              android:id="@+id/itemUnit_onScreen"
              />




          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="#A9A9A9"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:text="Unit Price: "
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="3dp"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="@color/black"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:text="Rs 00.00"
                  android:layout_marginLeft="2dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/itemUnitPrice_onScreen"
                  />







          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="#A9A9A9"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:text="Tax amount: "
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="3dp"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="@color/black"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:text="Rs 00.00 (00.0 %)"
                  android:layout_marginLeft="2dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/itemTaxAmount_onScreen"
                  />







          </LinearLayout>

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/line_ic"
              android:scaleType="fitXY"
              app:tint="@color/colorPrimaryDark"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              />


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="#A9A9A9"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:text="Item Total: "
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="3dp"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:text="Rs 00.00"
                  android:layout_marginLeft="2dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/itemTotal_onScreen"
                  />

          </LinearLayout>


          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/line_ic"
              android:scaleType="fitXY"
              app:tint="@color/colorPrimaryDark"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              />
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/line_ic"
              android:scaleType="fitXY"
              app:tint="@color/colorPrimaryDark"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              />


          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="4dp"
              android:layout_gravity="center"
              >

              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:src="@drawable/minus_ic"
                  app:tint="@color/colorPrimaryDark"
                  android:background="@drawable/roundedittext"
                  android:padding="3dp"
                  android:id="@+id/minusBtn_onScreen"
                  />


              <TextView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:text="1"
                  android:textStyle="bold"
                  android:layout_marginLeft="3dp"
                  android:layout_marginRight="3dp"
                  android:textColor="@color/black"
                  android:gravity="center"
                  android:id="@+id/itemQty_onScreen"
                  />

              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:src="@drawable/plus_ic"
                  android:background="@drawable/roundedittext"
                  android:padding="3dp"
                  app:tint="@color/colorPrimaryDark"
                  android:id="@+id/plusBtn_onScreen"
                  />



          </LinearLayout>





      </LinearLayout>



      <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/delete_ic"
          android:background="@drawable/roundedittext"
          android:padding="3dp"
          app:tint="@color/colorPrimaryDark"
          android:layout_alignParentRight="true"
          android:layout_margin="2dp"
          android:id="@+id/delBtn_onScreen"
          />



  </RelativeLayout>



</androidx.cardview.widget.CardView>