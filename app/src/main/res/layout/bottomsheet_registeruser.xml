<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="Ecrrede Billing App"
            android:fontFamily="cursive"
            android:gravity="center"
            />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/keypad_ic"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:tint="@color/colorPrimaryDark"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/roundedittext"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="3dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:hint="Email"
            android:padding="5dp"
            android:textColorHint="#A9A9A9"
            android:drawableLeft="@drawable/mail_ic"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:id="@+id/email_register"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/roundedittext"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="3dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:hint="Password"
            android:padding="5dp"
            android:textColorHint="#A9A9A9"
            android:drawableLeft="@drawable/password_ic"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:inputType="textPassword"
            android:id="@+id/password_register"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/roundedittext"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="3dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:hint="Confirm password"
            android:padding="5dp"
            android:textColorHint="#A9A9A9"
            android:drawableLeft="@drawable/password_ic"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:inputType="textPassword"
            android:id="@+id/confirmPassword_register"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/buttons"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Create new account"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginBottom="25dp"
            android:id="@+id/createAccount_register"
            />




    </LinearLayout>

</androidx.cardview.widget.CardView>